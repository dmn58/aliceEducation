<h1> <%= @project.name%></h1>

<% if !@joined %>
	<%= @project.price  == 0? "free" : "$#{@project.price}" %>
	

	<% if user_signed_in? %>
		<%= form_tag free_path do %>
		<%= hidden_field_tag 'project_id', @project.id%>
		<button type="submit">take this project</button>
		<% end %>
	<%else%>
		<%=link_to new_user_session_path  do%>
		<button type="submit">take this project</button>
		<% end %>
	<%end%>

<%else%>
	<h5><%= current_user.name%></h5>
	<h5>list of users taking this course</h5>
	<% @user.each do |u|%>
	<li><%=u.name%></li>
	<% end %>
<%end%>



<p><%= image_tag @project.image(:medium)%></p>
<p><%= @project.content%></p>

<ul>
	<li>
		<% @tasks.each do |task|%>
			<%= link_to [task.project, task] do %>
				<li>
				<%= task.note%>
				</li>
			<% end %>
		<% end %>
	</li>
</ul>